{
  "name": "Wordpress Chrome Bug Fix",
  "version": "0.0.1",
  "description": "Correct issue with Wordpress Admin menu rendering in Chrome.",
  "content_scripts": [
    {
      "matches": [
        "http://*/wp-admin/*",
        "https://*/wp-admin/*",
        "http://*/*/wp-admin/*",
        "https://*/*/wp-admin/*"
      ],
      "js": ["fix.js"]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/wp-admin/*",
    "https://*/wp-admin/*",
    "http://*/*/wp-admin/*",
    "https://*/*/wp-admin/*"
  ],
  "icons": {
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "manifest_version": 2
}